<section
  id="projects"
  class="min-h-screen bg-gray-200 flex items-center justify-center py-5 flex-col"
>
  <Ui::AwesomeLabel class="pb-8">
    Recent Projects
  </Ui::AwesomeLabel>
  <div class="grid grid-cols-1 md:grid-cols-2 w-10/12 md:w-9/12 gap-8 sm:gap-6">
    {{#each this.projects as |project|}}
      <Projects::GitCard @data={{project}} />
    {{/each}}
  </div>
</section>